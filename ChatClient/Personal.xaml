<Page x:Class="ChatClient.Personal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Personal">

    <Grid Background="White" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>


        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2"  Margin="0,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Профиль" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <Button x:Name="backButton" Grid.Column="3" Grid.Row="7" Content="Выйти из аккаунта" HorizontalAlignment="Right" Width="150" Margin="0,50,0,0" FontSize="15" Background="#FFE6E6E6" Click="backButton_Click"/>
        <Button x:Name="menuButton" Grid.Column="3" Grid.ColumnSpan="1" Content="Меню" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Row="0" VerticalAlignment="Top"  Height="50" Width="150" Click="menuButton_Click" FontSize="15"/>
        <TextBlock Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" x:Name="activeUserTextBlock" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Аккаунт:" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Row="3"  Grid.Column="1" x:Name="activeUserNameTextBlock" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Имя:" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Row="3" Grid.RowSpan="2" Grid.Column="1" x:Name="activeUserLastNameTextBlock" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Фамилия:" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Row="4"  Grid.Column="1" x:Name="activeUserStatusNameTextBlock" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Статус:" VerticalAlignment="Center" FontSize="20" />

        <Button x:Name="newDataButton" Grid.Column="2" Grid.ColumnSpan="1" Content="Обновить данные" HorizontalAlignment="Center" Grid.Row="4" Grid.RowSpan="2" VerticalAlignment="Center" FontSize="20" Height="40" Width="290" Click="newDataButton_Click" Margin="0,0,0,0"/>
        <TextBox x:Name="nameTB" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="250" FontSize="18"/>
        <TextBox x:Name="last_nameTB" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="250" FontSize="18"/>
        <TextBox x:Name="statusTB" Grid.Column="2" Grid.Row="3" Grid.RowSpan="2" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="250" FontSize="18"/>
        <TextBlock Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,0"  TextWrapping="Wrap" Text="Изменить данные:" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,0"  TextWrapping="Wrap" Text="Актуальные данные:" VerticalAlignment="Center" FontSize="20"/>

    </Grid>
</Page>

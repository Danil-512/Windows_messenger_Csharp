<Page x:Class="ChatClient.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Login">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <TextBlock VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" FontSize="30" Margin="0,15,0,0">Страница авторизации</TextBlock>
        <Button x:Name="backButton" Grid.Column="3" Grid.Row="5" Content="Обратно" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Height="40" Width="74" Margin="0,0,0,0" FontSize="15" Background="#FFE6E6E6" Click="backButton_Click"/>
        <TextBlock VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="30" Margin="0,15,0,0">Логин</TextBlock>
        <TextBlock VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="30" Margin="0,15,0,0">Пароль</TextBlock>
        <TextBox x:Name="loginTBox" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,0,0" TextWrapping="Wrap" Text=""  Width="250" Height="40" FontSize="24"/>
        <TextBox x:Name="registerTBox" Grid.Column="2"  Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,27,0,0" TextWrapping="Wrap" Text=""  Width="250" Height="40" FontSize="24"/>
        <Button x:Name="enterButton" Click="enterButton_Click" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Width="300" Height="40" Background="#FFE6E6E6" FontSize="23">Ввести данные</Button>



    </Grid>
</Page>

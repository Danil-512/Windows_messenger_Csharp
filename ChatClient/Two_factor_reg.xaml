<Page x:Class="ChatClient.Two_factor_reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Two_factor_reg">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center" FontSize="25" Margin="0,0,0,0">Проверка почты для регистрации</TextBlock>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Margin="0,0,0,10">На вашу почту отправлен код безопасности</TextBlock>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="3"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Margin="0,0,0,0">Введите полученный код:</TextBlock>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="3" Grid.RowSpan="2"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Margin="0,0,0,0">Если код не пришел, возможно введена некорректная почта</TextBlock>


        <Button x:Name="backButton" Grid.Column="3" Grid.Row="7" Content="Выйти из аккаунта" HorizontalAlignment="Right" Width="150" Margin="0,50,0,0" FontSize="15" Background="#FFE6E6E6" Click="backButton_Click"/>
        <TextBox x:Name="textBox1" Grid.Row="4" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"  TextWrapping="Wrap" Text="" Width="350" Height="40" FontSize="24"/>
        <Button x:Name="button1" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" Grid.RowSpan="2" Content="Ввод" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Height="35" Width="250" FontSize="23" Background="#FFE6E6E6" Click="button1_Click"/>

    </Grid>
</Page>
